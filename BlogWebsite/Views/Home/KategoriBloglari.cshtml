@{
    ViewData["Title"] = ViewBag.SecilikKategori?.KategoriAdi ?? "Kategori Blogları";
    Layout = "~/Views/Shared/_Home.cshtml";
}
@model BlogWebsite.Modeller.AnasayfaBlogs

<style>
    .bosluk {
        margin-top: 75px;
    }
</style>

<main class="site-main">
    <!--================ Start Blog Post Area =================-->
    <section class="blog-post-area section-margin bosluk">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <h2>@ViewBag.SecilikKategori.KategoriAdi Kategorisi</h2>
                    <p class="text-muted">Bu kategoride @Model.BlogYazilarim.Count adet blog bulunmaktadır.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    @if (Model.BlogYazilarim.Count == 0)
                    {
                            <div class="alert alert-info">
                                Bu kategoride henüz blog yazısı bulunmamaktadır.
                            </div>
                    }
                    else
                    {
                        @foreach (var item in Model.BlogYazilarim)
                        {
                            var yazar = Model.Kullanicilarim.FirstOrDefault(k => k.KullaniciId == item.YazarId);
                            var yorumsayisi = Model.Yorumlarim.Count(x => x.BlogId == item.BlogId && x.Onaylandi == true);

                                    <div class="single-recent-blog-post">
                                        <div class="thumb">
                                            <img width="720px" height="400px" style="object-fit: cover;" src="@item.AnaGorsel" alt="@item.Baslik">
                                            <ul class="thumb-info">
                                                <li><i class="ti-user"></i>@yazar?.AdSoyad</li>
                                                <li><i class="ti-notepad"></i>@item.YayinTarihi?.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</li>
                                                <li><a href="#"><i class="ti-themify-favicon"></i>@yorumsayisi Yorum </a></li>
                                            </ul>
                                        </div>
                                        <div class="details mt-20">
                                            <a asp-action="BlogDetay" asp-controller="Home" asp-route-blogid="@item.BlogId">
                                                <h3>@item.Baslik</h3>
                                            </a>
                                            <p class="tag-list-inline">
                                                Etiketler:
                                        @{
                                            var blogetiketlerim = Model.BlogEtiketlerim.Where(b => b.BlogId == item.BlogId).ToList();
                                            var etiketAdlari = blogetiketlerim
                                                .Select(be => Model.Etiketlerim.FirstOrDefault(e => e.EtiketId == be.EtiketId)?.EtiketAdi)
                                                .Where(a => !string.IsNullOrEmpty(a))
                                                .ToList();
                                        }

                                        @for (int i = 0; i < etiketAdlari.Count; i++)
                                        {
                                                        <a href="#">@etiketAdlari[i]</a>
                                            if (i < etiketAdlari.Count - 1)
                                            {
                                                @:,
                                            }
                                        }
                                            </p>

                                            <p>@item.Ozet</p>
                                            <a asp-action="BlogDetay" asp-controller="Home" asp-route-blogid="@item.BlogId" class="button">Devamını Oku <i class="ti-arrow-right"></i></a>
                                        </div>
                                    </div>
                        }
                    }

                    <div class="row">
                        <div class="col-lg-12">
                            <nav class="blog-pagination justify-content-center d-flex">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a href="#" class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">
                                                <i class="ti-angle-left"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                                    <li class="page-item">
                                        <a href="#" class="page-link" aria-label="Next">
                                            <span aria-hidden="true">
                                                <i class="ti-angle-right"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Start Blog Post Siddebar -->
                <div class="col-lg-4 sidebar-widgets">
                    <div class="widget-wrap">
                        <div class="single-sidebar-widget newsletter-widget">
                            <h4 class="single-sidebar-widget__title">Newsletter</h4>
                            <div class="form-group mt-30">
                                <div class="col-autos">
                                    <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="E-posta girin" onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'E-posta girin'">
                                </div>
                            </div>
                            <button class="bbtns d-block mt-20 w-100">Abone Ol</button>
                        </div>

                        <div class="single-sidebar-widget post-category-widget">
                            <h4 class="single-sidebar-widget__title">Kategoriler</h4>
                            <ul class="cat-list mt-20">
                                @foreach (var kategori in Model.Kategorilerim)
                                {
                                    var blogSayisi = kategori.BlogYazilaris?.Count ?? 0;
                                    if (blogSayisi > 0)
                                    {
                                                <li>
                                                    <a href="@Url.Action("KategoriBloglari", "Home", new { kategoriId = kategori.KategoriId })"
                                                       class="d-flex justify-content-between @(kategori.KategoriId == ViewBag.SecilikKategori.KategoriId ? "font-weight-bold text-primary" : "")">
                                                        <p>@kategori.KategoriAdi</p>
                                                        <p>(@blogSayisi)</p>
                                                    </a>
                                                </li>
                                    }
                                }
                            </ul>
                        </div>

                        <div class="single-sidebar-widget tag_cloud_widget">
                            <h4 class="single-sidebar-widget__title">Etiketler</h4>
                            <ul class="list">
                                @foreach (var etiket in Model.Etiketlerim.Take(8))
                                {
                                        <li>
                                            <a href="#">@etiket.EtiketAdi</a>
                                        </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- End Blog Post Siddebar -->
            </div>
        </div>
    </section>
    <!--================ End Blog Post Area =================-->
</main>
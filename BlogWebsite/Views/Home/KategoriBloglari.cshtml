@{
    ViewData["Title"] = ViewBag.SecilikKategori?.KategoriAdi ?? "Kategori Blogları";
    Layout = "~/Views/Shared/_Home.cshtml";
}
@model BlogWebsite.Modeller.AnasayfaBlogs

<style>
    .bosluk {
        margin-top: 75px;
    }
</style>

<!--================ Start Blog Post Area =================-->
<section class="blog-post-area section-margin bosluk">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2>@ViewBag.SecilikKategori.KategoriAdi Kategorisi</h2>
                <p class="text-muted">Bu kategoride @Model.BlogYazilarim.Count adet blog bulunmaktadır.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                @if (Model.BlogYazilarim.Count == 0)
                {
                        <div class="alert alert-info">
                            Bu kategoride henüz blog yazısı bulunmamaktadır.
                        </div>
                }
                else
                {
                        <div class="row">
                        @foreach (var item in Model.BlogYazilarim)
                        {
                            var yazar = Model.Kullanicilarim.FirstOrDefault(k => k.KullaniciId == item.YazarId);
                            var yorumsayisi = Model.Yorumlarim.Count(x => x.BlogId == item.BlogId && x.Onaylandi == true);

                                    <div class="col-md-6">
                                        <div class="single-recent-blog-post card-view">
                                            <div class="thumb">
                                                <img class="card-img rounded-0" src="@item.AnaGorsel" alt="@item.Baslik" 
                                                     style="width: 100%; height: 250px; object-fit: cover;">
                                                <ul class="thumb-info">
                                                    <li><a href="#"><i class="ti-user"></i>@yazar?.AdSoyad</a></li>
                                                    <li><a href="#"><i class="ti-themify-favicon"></i>@yorumsayisi Yorum</a></li>
                                                </ul>
                                            </div>
                                            <div class="details mt-20">
                                                <a asp-controller="Home" asp-action="BlogDetay" asp-route-blogid="@item.BlogId">
                                                    <h3>@item.Baslik</h3>
                                                </a>
                                                <p>
                                            @if (!string.IsNullOrEmpty(item.Ozet))
                                            {
                                                @(item.Ozet.Length > 120 ? item.Ozet.Substring(0, 120) + "..." : item.Ozet)
                                            }
                                                </p>
                                                <a class="button" asp-controller="Home" asp-action="BlogDetay" asp-route-blogid="@item.BlogId">
                                                    Devamını Oku <i class="ti-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                        }
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <nav class="blog-pagination justify-content-center d-flex">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a href="#" class="page-link" aria-label="Previous">
                                                <span aria-hidden="true">
                                                    <i class="ti-angle-left"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                                        <li class="page-item">
                                            <a href="#" class="page-link" aria-label="Next">
                                                <span aria-hidden="true">
                                                    <i class="ti-angle-right"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                }
            </div>

            <!-- Start Blog Post Siddebar -->
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">

                    <!-- Kategori Widget -->
                    <div class="single-sidebar-widget post-category-widget">
                        <h4 class="single-sidebar-widget__title">Kategoriler</h4>
                        <ul class="cat-list mt-20">
                            @foreach (var kategori in Model.Kategorilerim)
                            {
                                var blogSayisi = kategori.BlogYazilaris?.Count ?? 0;
                                if (blogSayisi > 0)
                                {
                                    <li>
                                        <a asp-controller="Home" 
                                            asp-action="KategoriBloglari" 
                                            asp-route-kategoriId="@kategori.KategoriId"
                                            class="d-flex justify-content-between">
                                            <p>@kategori.KategoriAdi</p>
                                            <p>(@blogSayisi)</p>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>              
            </div>

            <!-- End Blog Post Siddebar -->
        </div>
    </div>
</section>
<!--================ End Blog Post Area =================-->
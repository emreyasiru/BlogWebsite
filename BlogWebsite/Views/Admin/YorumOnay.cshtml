@model List<BlogWebsite.Models.Yorumlar>
@{
    ViewData["Title"] = "YorumOnay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Onay Bekleyen Yorumlar (@Model.Count)</h3>
                    
                </div>
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i> Onay bekleyen yorum bulunmamaktadır.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Ad</th>
                                        <th>Email</th>
                                        <th>Yorum</th>
                                        <th>Blog</th>
                                        <th>Tarih</th>
                                        <th style="width: 180px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var yorum in Model)
                                    {
                                        <tr id="yorum-@yorum.YorumId">
                                            <td>
                                                <strong>@yorum.Ad</strong>
                                            </td>
                                            <td>
                                                <small>@yorum.Email</small>
                                            </td>
                                            <td>
                                                @if (yorum.YorumIcerik.Length > 100)
                                                {
                                                    @yorum.YorumIcerik.Substring(0, 100)
                                                    <text>...</text>
                                                        <br />
                                                        <a href="#" onclick="toggleYorum(@yorum.YorumId); return false;" class="text-primary">
                                                            <small>Tamamını Gör</small>
                                                        </a>
                                                        <div id="tamYorum-@yorum.YorumId" style="display:none;" class="mt-2 p-2 bg-light">
                                                        @yorum.YorumIcerik
                                                     </div>
                                                }
                                                else
                                                {
                                                    @yorum.YorumIcerik
                                                }
                                                            </td>
                                                            <td>
                                                                <a href="@Url.Action("BlogDetay", "Home", new { blogid = yorum.BlogId })" 
                                                                   target="_blank" class="text-info">
                                                    @yorum.Blog.Baslik
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <small>@yorum.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                                            </td>
                                                            <td>
                                                                <button class="btn btn-success btn-sm btn-yorum-onayla" data-yorumid="@yorum.YorumId">
                                                                    <i class="fa fa-check"></i> Onayla
                                                                </button>
                                                                <button class="btn btn-danger btn-sm btn-yorum-reddet" data-yorumid="@yorum.YorumId">
                                                                    <i class="fa fa-times"></i> Reddet
                                                                </button>
                                                            </td>
                                                        </tr>
                                    }
                                        </tbody>
                                    </table>
                                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleYorum(yorumId) {
        var element = document.getElementById('tamYorum-' + yorumId);
        if (element.style.display === 'none') {
            element.style.display = 'block';
        } else {
            element.style.display = 'none';
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        // Onayla butonları
        document.querySelectorAll('.btn-yorum-onayla').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var yorumId = this.getAttribute('data-yorumid');

                if (confirm('Bu yorumu onaylamak istediğinize emin misiniz?')) {
                    fetch('/Admin/YorumOnayla', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'yorumId=' + yorumId
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            document.getElementById('yorum-' + yorumId).remove();

                            if (document.querySelectorAll('tbody tr').length === 0) {
                                location.reload();
                            }
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Bir hata oluştu!');
                    });
                }
            });
        });

        // Reddet butonları
        document.querySelectorAll('.btn-yorum-reddet').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var yorumId = this.getAttribute('data-yorumid');

                if (confirm('Bu yorumu reddetmek istediğinize emin misiniz? Yorum silinecektir!')) {
                    fetch('/Admin/YorumReddet', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'yorumId=' + yorumId
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            document.getElementById('yorum-' + yorumId).remove();

                            if (document.querySelectorAll('tbody tr').length === 0) {
                                location.reload();
                            }
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Bir hata oluştu!');
                    });
                }
            });
        });
    });
</script>


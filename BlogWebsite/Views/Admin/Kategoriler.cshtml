@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Kategoriler>


<!-- Bildirim Mesajları -->
@if (TempData["Basari"] != null)
{
        <div class="alert alert-success alert-dismissible fade show ml-4 mr-4 mt-3" role="alert">
            <strong>✓ Başarılı!</strong> @TempData["Basari"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}

@if (TempData["Hata"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show ml-4 mr-4 mt-3" role="alert">
            <strong>✗ Hata!</strong> @TempData["Hata"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}

<!-- Kategori Ekle Butonu - Sadece Admin görebilir -->
@if (ViewBag.KullaniciRol == "Admin")
{
        <button type="button" class="btn btn-primary ml-4 mt-3 mb-2" data-toggle="modal" data-target="#exampleModal">
            <i class="fa fa-plus"></i> Kategori Ekle
        </button>
}

<!-- Kategori Ekle Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yeni Kategori Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="KategoriEkle" asp-controller="Admin" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="categoryName">Kategori Adı</label>
                        <input type="text" name="kategori_ekle" class="form-control" id="categoryName" placeholder="Kategori adını giriniz" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Kategori Düzenle Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Kategori Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editKategoriId">
                <div class="form-group">
                    <label for="editKategoriAdi">Kategori Adı</label>
                    <input type="text" class="form-control" id="editKategoriAdi" placeholder="Kategori adını giriniz" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-primary" id="btnGuncelle">Güncelle</button>
            </div>
        </div>
    </div>
</div>

<div class="card ml-4 mr-4">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Kategori Adı</th>
                    @if (ViewBag.KullaniciRol == "Admin")
                    {
                            <th scope="col" style="width: 150px;">İşlemler</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var ktg in Model)
                {
                        <tr id="kategori-@ktg.KategoriId">
                            <th scope="row">@ktg.KategoriId</th>
                            <td class="kategori-adi">@ktg.KategoriAdi</td>
                        @if (ViewBag.KullaniciRol == "Admin")
                        {
                                    <td>
                                        <button class="btn btn-warning btn-sm btn-duzenle" data-id="@ktg.KategoriId" data-adi="@ktg.KategoriAdi">
                                            <i class="fa fa-edit"></i> Düzenle
                                        </button>
                                        <button class="btn btn-danger btn-sm btn-sil" data-id="@ktg.KategoriId">
                                            <i class="fa fa-trash"></i> Sil
                                        </button>
                                    </td>
                        }
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {

        // Düzenle butonları için event listener
        var duzenleButtons = document.querySelectorAll('.btn-duzenle');
        duzenleButtons.forEach(function(btn) {
            btn.addEventListener('click', function() {
                var kategoriId = this.getAttribute('data-id');
                var kategoriAdi = this.getAttribute('data-adi');

                console.log('Düzenle tıklandı - ID:', kategoriId, 'Ad:', kategoriAdi);

                document.getElementById('editKategoriId').value = kategoriId;
                document.getElementById('editKategoriAdi').value = kategoriAdi;

                // Bootstrap 4 için jQuery kullan
                jQuery('#editModal').modal('show');
            });
        });

        // Güncelle butonu
        var btnGuncelle = document.getElementById('btnGuncelle');
        if (btnGuncelle) {
            btnGuncelle.addEventListener('click', function() {
                var kategoriId = document.getElementById('editKategoriId').value;
                var kategoriAdi = document.getElementById('editKategoriAdi').value;

                console.log('Güncelle tıklandı - ID:', kategoriId, 'Ad:', kategoriAdi);

                if (!kategoriAdi.trim()) {
                    alert('Kategori adı boş olamaz!');
                    return;
                }

                fetch('/Admin/KategoriGuncelle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'kategoriId=' + kategoriId + '&kategoriAdi=' + encodeURIComponent(kategoriAdi)
                })
                .then(response => {
                    console.log('Response status:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('Response data:', data);
                    if (data.success) {
                        alert(data.message);

                        // Tabloyu güncelle (sayfa yenilemeden)
                        var row = document.getElementById('kategori-' + kategoriId);
                        if (row) {
                            row.querySelector('.kategori-adi').textContent = kategoriAdi;
                            row.querySelector('.btn-duzenle').setAttribute('data-adi', kategoriAdi);
                        }

                        // Modal'ı kapat - Bootstrap 4 için
                        jQuery('#editModal').modal('hide');
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Hata detayı:', error);
                    alert('Bir hata oluştu! Konsolu kontrol edin.');
                });
            });
        }

        // Sil butonları için event listener
        var silButtons = document.querySelectorAll('.btn-sil');
        silButtons.forEach(function(btn) {
            btn.addEventListener('click', function() {
                var kategoriId = this.getAttribute('data-id');

                if (confirm('Bu kategoriyi silmek istediğinize emin misiniz?')) {
                    fetch('/Admin/KategoriSil', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'kategoriId=' + kategoriId
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            document.getElementById('kategori-' + kategoriId).remove();
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Bir hata oluştu!');
                    });
                }
            });
        });
    });
</script>
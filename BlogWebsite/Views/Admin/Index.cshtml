@model List<BlogWebsite.Models.BlogYazilari>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yayınlanmış Bloglar (@Model.Count)</h3>
                    <div class="float-right">
                        <a asp-controller="Admin" asp-action="BlogOnay" class="btn btn-warning btn-sm">
                            <i class="fa fa-clock"></i> Onay Bekleyenler
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle"></i> Yayınlanmış blog bulunmamaktadır.
                            </div>
                    }
                    else
                    {
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px;">Görsel</th>
                                            <th>Başlık</th>
                                            <th>Yazar</th>
                                            <th>Kategori</th>
                                            <th>Yayın Tarihi</th>
                                            <th>Görüntülenme</th>
                                            <th style="width: 180px;">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var blog in Model)
                                    {
                                                <tr id="blog-@blog.BlogId">
                                                    <td>
                                                @if (!string.IsNullOrEmpty(blog.AnaGorsel))
                                                {
                                                                <img src="@blog.AnaGorsel" alt="@blog.Baslik" 
                                                                     class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" 
                                                                     style="width: 60px; height: 60px;">
                                                                    <i class="fas fa-image"></i>
                                                                </div>
                                                }
                                                    </td>
                                                    <td>
                                                        <strong>@blog.Baslik</strong>
                                                @if (!string.IsNullOrEmpty(blog.Ozet))
                                                {
                                                                <br />
                                                                <small class="text-muted">
                                                        @(blog.Ozet.Length > 80 ? blog.Ozet.Substring(0, 80) + "..." : blog.Ozet)
                                                                </small>
                                                }
                                                    </td>
                                                    <td>@blog.Yazar.AdSoyad</td>
                                                    <td>
                                                        <span class="badge badge-info">@blog.Kategori.KategoriAdi</span>
                                                    </td>
                                                    <td>
                                                @if (blog.YayinTarihi.HasValue)
                                                {
                                                    @blog.YayinTarihi.Value.ToString("dd.MM.yyyy HH:mm")
                                                }
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-primary">
                                                            <i class="fa fa-eye"></i> @blog.GoruntulemeSayisi
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Home" asp-action="BlogDetay" asp-route-blogid="@blog.BlogId" 
                                                           class="btn btn-info btn-sm" target="_blank">
                                                            <i class="fa fa-eye"></i> Görüntüle
                                                        </a>
                                                        <button class="btn btn-danger btn-sm btn-pasiflestir" data-blogid="@blog.BlogId">
                                                            <i class="fa fa-times-circle"></i> Pasifleştir
                                                        </button>
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {

        // Pasifleştir butonları
        document.querySelectorAll('.btn-pasiflestir').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var blogId = this.getAttribute('data-blogid');

                if (confirm('Bu blogu yayından kaldırmak istediğinize emin misiniz? Blog artık anasayfada görünmeyecek.')) {
                    fetch('/Admin/BlogPasiflestir', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'blogId=' + blogId
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            document.getElementById('blog-' + blogId).remove();

                            // Eğer hiç blog kalmadıysa sayfayı yenile
                            if (document.querySelectorAll('tbody tr').length === 0) {
                                location.reload();
                            }
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Bir hata oluştu!');
                    });
                }
            });
        });

    });
</script>